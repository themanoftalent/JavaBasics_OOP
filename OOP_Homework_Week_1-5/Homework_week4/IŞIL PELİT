ZEYNEP IŞIL PELİT


1) ortalama ödevi




import java.util.Scanner;
public class main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        int toplam = 0;
        for (int i = 0; i < 5; i++) {
            System.out.print("not girin:" + (i + 1)  );
            int not = scanner.nextInt();
            toplam += not;
        }
        double ortalama = toplam / 5;
        System.out.print("girilen sayıların ortalaması:" + ortalama);
    int durum;
        if (ortalama >= 50) {
          durum  = 1;
        } else {
            durum = 2;
        }
        switch (durum) {
            case 1:
                System.out.println("Geçtiniz.");
                break;
            case 2:
                System.out.print("Kaldınız.");
                break;

        }

    }
}

ZEYNEP IŞIL PELİT



2) yas

import java.util.Scanner;
public class ödev{
    public static void main(String[]args){
        Scanner scanner=new Scanner(System.in);
        System.out.println("bir yas giriniz:");
        int yas=scanner.nextInt();
        int durum;
        if(yas<5){
            durum=1;

        }
        else if(5<=yas && yas<12){
            durum=2;
        }
        else if(12<=yas && yas<20){
            durum=3;
        }
        else if(20<=yas && yas<50){
            durum=4;
        }
        else{
            durum=5;
        }
        switch(durum) {
            case 1:
                System.out.print("kisi bebektir:");
                break;
            case 2:
                System.out.print("kisi cocuktur:");
                break;
            case 3:
                System.out.print("kisi ergendir:");
                break;
            case 4:
                System.out.print("kisi yetiskindir:");
                break;
            case 5:
                System.out.println("kisi yaslidir:");
                break;

        }
    }
}


ZEYNEP IŞIL PELİT


3)girilen sayidan sifira kadar yazdirma


import java.util.Scanner;
public class Main {
    public static void main (String[]args){
        Scanner scanner=new Scanner(System.in);
        System.out.println("bir sayi giriniz:");
        int sayi=scanner.nextInt();
        for(int i=sayi; i>=0; i--){
            System.out.print( i  +" ");
        }
    }

}


ZEYNEP IŞIL PELİT


4) aylara göre mevsim


    import java.util.Scanner;

    public class Main {
    public static void main(String[] args) {
    Scanner scanner=new Scanner(System.in);
        System.out.println("kacinci ay?:");
    int ay = scanner.nextInt();



        switch (ay) {
            case 1:
            case 2:
                System.out.println("Kış mevsimi");
                break;
            case 3:
            case 4:
            case 5:
                System.out.println("İlkbahar mevsimi");
                break;
            case 6:
            case 7:
            case 8:
                System.out.println("Yaz mevsimi");
                break;
            case 9:
            case 10:
            case 11:
                System.out.println("Sonbahar mevsimi");
                break;
            case 12:
                System.out.println("Kış mevsimi");
                break;
            default:
                System.out.println("Girdiğiniz ay geçersiz.");
        }
    }
}

